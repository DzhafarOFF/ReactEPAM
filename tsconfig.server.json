{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "lib": ["es5", "es6", "dom"],
      "types": [
          "node", "express"
      ],
      "typeRoots" : ["./src/types"],
      "esModuleInterop": true,
      "downlevelIteration": true
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}